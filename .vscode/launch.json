{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "lldb",
      "request": "launch",
      "name": "Debug executable 'qpm_cli'",
      "cargo": {
        "args": ["build", "--bin=qpm2", "--package=qpm_cli"],
        "filter": {
          "name": "qpm2",
          "kind": "bin"
        }
      },
      "args": ["restore","default"],
      "cwd": "${workspaceFolder}/test_package"
    },
    {
      "type": "lldb",
      "request": "launch",
      "name": "Debug unit tests in executable 'qpm_cli'",
      "cargo": {
        "args": ["test", "--no-run", "--bin=qpm", "--package=qpm_cli"],
        "filter": {
          "name": "qpm2",
          "kind": "bin"
        }
      },
      "args": [],
      "cwd": "${workspaceFolder}"
    }
  ]
}
